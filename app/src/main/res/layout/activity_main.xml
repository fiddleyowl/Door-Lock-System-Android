<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.MainActivity">

    <TextView
            android:text="Your device ID is: 233333333"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/deviceIDTextView2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/openButton"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.5"/>
    <Button
            android:text="OPEN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/openButton"
            app:layout_constraintTop_toBottomOf="@+id/deviceIDTextView2"
            app:layout_constraintBottom_toTopOf="@+id/deactivateButton" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            android:onClick="openDoor"/>
    <Button
            android:text="Deactivate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/deactivateButton"
            tools:layout_editor_absoluteY="482dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            android:onClick="deactivateDevice"/>
</androidx.constraintlayout.widget.ConstraintLayout>